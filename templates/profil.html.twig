{% extends 'base.html.twig' %}
{% block titleTwig %} Profile{% endblock %}
{% block body %}
    <div class="profileDiv" >
        <div class="container">
            <div class="row g-2">
                <div class="col-6">
                    <p>First name :</p>
                </div>
                <div class="col-6">
                    <p>{{ app.user.prenom}}</p>
                </div>
                <div class="col-6">
                    <p>Name :</p>
                </div>
                <div class="col-6">
                    <p>{{ app.user.nom }}</p>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row g-2">
                <div class="col-6">
                    <p>Number phone :</p>
                </div>
                <div class="col-6">
                    <p>{{ app.user.telephone }}</p>
                </div>
                <div class="col-6">
                    <p>Date of birth</p>
                </div>
                <div class="col-6">
                    <p>{{ app.user.dateNaiss |date('Y/m/d') }}</p>
                </div>
                <div class="col-6">
                    <p>Email :</p>
                </div>
                <div class="col-6">
                    <p>{{ app.user.email }}</p>
                </div>
                <div class="row g-2">
                    <div class="col-6">
                        <p>Address</p>
                    </div>
                    <div class="col-6">
                        <p>{{ app.user.adresse }}</p>
                    </div>
                </div>
                <div class="row g-2">
                    <div class="col-6">
                        <p>Job</p>
                    </div>
                    <div class="col-6">
                        <p>{{ app.user.poste }}</p>
                    </div>
                </div>
            </div>
            {% if app.user.administrateur %}
            <button type="submit" style="margin-top: 15px" class="button" ><a  href="{{ path('app_updateuser',{'id' : app.user.id}) }}">Update</a></button>
            {% endif %}
            <button type="reset" style="margin-top: 15px" class="button" ><a  href="{{ path('app_m') }}">Cancel</a></button>
    </div>
{% endblock %}

{% block title %}
    Profil
{% endblock %}